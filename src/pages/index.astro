---
import { t, changeLanguage } from "i18next";
import { SITE } from "~/config.mjs";
import Layout from "~/layouts/PageLayout.astro";
import Hero from "~/components/widgets/Hero.astro";
import Note from "~/components/widgets/Note.astro";
import Features from "~/components/widgets/Features.astro";
import Features2 from "~/components/widgets/Features2.astro";
import Steps from "~/components/widgets/Steps.astro";
import Content from "~/components/widgets/Content.astro";
import LatestPosts from "~/components/blog/wpLatestPosts.astro";
import FAQs from "~/components/widgets/FAQs.astro";
import Stats from "~/components/widgets/Stats.astro";
import CallToAction from "~/components/widgets/CallToAction.astro";

changeLanguage("fr");

const meta = {
    title: SITE.title,
    description: SITE.description,
    dontUseTitleTemplate: true,
};
---

<Layout {meta}>
  <!-- Hero Widget ******************* -->

  <Hero
    callToAction={{
      text: t('navigation.telecharger'),
      href: 'https://github.com/onwidget/astrowind',
      icon: 'tabler:download',
    }}
    callToAction2={{ text: t('site.more'), href: '#features' }}
    image={{ src: import('~/assets/images/hero.png'), alt: 'AstroWind Hero Image' }}
  >
    <Fragment slot="title">
      {t('site.slogan')}
      <span class="text-accent dark:text-white highlight"> {t('site.slogan1')}</span>
      {t('site.slogan2')}
    </Fragment>
    <Fragment slot="subtitle">
      {t('site.info-projet')}
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->

  <Note />

  <!-- Features Widget *************** -->

  <Features
    highlight={t('heroObjectifs.highlight')}
    title={t('heroObjectifs.title')}
    subtitle={t('heroObjectifs.subtitle')}
    items={[
      [
        {
          title: t('heroObjectifs.items.title1'),
          description: t('heroObjectifs.items.description1'),
          icon: 'tabler:brand-tailwind',
        },
        {
          title: t('heroObjectifs.items.title2'),
          description: t('heroObjectifs.items.description2'),
          icon: 'tabler:components',
        },
        {
          title: t('heroObjectifs.items.title3'),
          description: t('heroObjectifs.items.description3'),
          icon: 'tabler:list-check',
        },
      ],
      [
        {
          title: t('heroObjectifs.items.title4'),
          description: t('heroObjectifs.items.description4'),
          icon: 'tabler:rocket',
        },
        {
          title: t('heroObjectifs.items.title5'),
          description: t('heroObjectifs.items.description5'),
          icon: 'tabler:arrows-right-left',
        },
        {
          title: t('heroObjectifs.items.title6'),
          description: t('heroObjectifs.items.description6'),
          icon: 'tabler:bulb',
        },
      ],
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    highlight="Inside template"
    title="And what's inside? ..."
    items={[
      {
        title: 'Per ei quaeque sensibus',
        description:
          'Ex usu illum iudico molestie. Pro ne agam facete mediocritatem, ridens labore facete mea ei. Pro id apeirian dignissim.',
